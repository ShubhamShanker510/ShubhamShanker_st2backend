<html>
  <head>
    <meta charset="utf-8" />
    <title>Form</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <style>
      * {
        padding: 0;
        margin: 0;
      }
      body {
        background:linear-gradient(to right, rgba(255,0,0,0), rgba(255,0,0,1))
          no-repeat center fixed;
        background-size: cover;
      }

      .container {
        background: red;
        width: 350px;
        height: 400px;
        padding-bottom: 20px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        margin: auto;
        padding: 70px 50px 20px 50px;
        border-radius: 20px;
        border-color: black;
        border-style: solid;
      }

      .fl {
        float: left;
        width: 110px;
        line-height: 35px;
      }

      .fontLabel {
        color: white;
        font-size:medium;
      }

      .fr {
        float: right;
      }

      .clr {
        clear: both;
      }

      .box {
        width: 360px;
        height: 35px;
        margin-top: 10px;
        font-family: verdana;
        font-size: 12px;
      }

      .textBox {
        height: 35px;
        width: 190px;
        border: none;
        padding-left: 20px;
        border-radius: 10px;
        margin-bottom: 10px;
      }

      .new {
        float: left;
      }

      .iconBox {
        height: 35px;
        width: 40px;
        line-height: 38px;
        text-align: center;
        background: #ff6600;
      }

      .radio {
        color: white;
        background:red;
        line-height: 38px;
      }

      .terms {
        line-height: 35px;
        text-align: center;
        background:red;
        color: white;
      }

      .submit {
        float: right;
        border: none;
        color:red;
        width: 110px;
        height: 35px;
        background: white;
        text-transform: uppercase;
        cursor: pointer;
        margin: 30px;
        width: 100%;
        margin-right: 10px;
        height: 70px;
        margin-top: 50px;
        border-radius: 20px;
      }
      .submit:hover{
        background-color: black;
        color: aliceblue;
      }
    </style>
  </head>
  <body>
    <!-- Body of Form starts -->
    <div class="container">
      <form action="/checkSignup" method="post" autocomplete="on">
        <!--First name-->
        <div class="box">
          <label for="username" class="fl fontLabel"><strong>USERNAME</strong></label>
         
          <div class="fr">
            <input
              type="text"
              name="username"
              placeholder="Username"
              class="textBox"
              autofocus="on"
              required
            />
          </div>
          <div class="clr"></div>
        </div>
        <!--First name-->

        <!--Second name-->
        <div class="box">
          <label for="fname" class="fl fontLabel"><strong>FIRST NAME</strong></label>
          
          <div class="fr">
            <input
              type="text"
              required
              name="fname"
              placeholder="First Name"
              class="textBox"
            />
          </div>
          <div class="clr"></div>
        </div>
        <!--Second name-->

        <!---Phone No.------>
        <div class="box">
          <label for="phone" class="fl fontLabel"><strong>PHONE NO</strong></label>
         
          <div class="fr">
            <input
              type="text"
              required
              name="phone"
              maxlength="10"
              placeholder="Phone No."
              class="textBox"
            />
          </div>
          <div class="clr"></div>
        </div>
        <!---Phone No.---->

        <!---Password------>
        <div class="box">
          <label for="password" class="fl fontLabel"><strong>PASSWORD</strong></label>
         
          <div class="fr">
            <input
              type="Password"
              required
              name="password"
              placeholder="Password"
              class="textBox"
            />
          </div>
          <div class="clr"></div>
        </div>
        <!---Password---->

        <!---Gender----->
        <div class="box radio">
          <label for="gender" class="fl fontLabel"> Gender: </label>
          <input type="radio" name="gender" value="Male" required /> Male &nbsp;
          &nbsp; &nbsp; &nbsp;
          <input type="radio" name="gender" value="Female" required /> Female
        </div>
        <!---Gender--->

        <!--Terms and Conditions------>
        <div class="box terms">
          <input type="checkbox" name="Terms" required /> &nbsp; I accept the
          terms and conditions
        </div>
        <!--Terms and Conditions------>

        <!---Submit Button------>
        <div class="box" style="background:red">
          <input type="Submit" name="Submit" class="submit" value="SUBMIt" />
        </div>
        <!---Submit Button----->
      </form>
    </div>
    <!--Body of Form ends--->
  </body>
</html>
